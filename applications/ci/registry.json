{
  "id": "registry",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "registry:2.6.0",
      "forcePullImage": true,
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 5000, "hostPort": 0, "servicePort": 5000, "protocol": "tcp" }
      ]
    },
    "volumes": [
      {
        "containerPath": "/var/lib/registry",
        "hostPath": "/shared/registry/storage",
        "mode": "RW"
      }
    ]
  },
  "env": {
    "REGISTRY_LOG_LEVEL": "warn",
    "REGISTRY_STORAGE_DELETE_ENABLED": "true",
    "REGISTRY_HTTP_SECRET": "10C261BB-7D73-4CDD-84AE-DF7620BCEF04"
  },
  "labels": {
    "HAPROXY_0_VHOST": "registry.mesos.uo.techx.fr"
  },
  "cpus": 0.5,
  "mem": 256.0,
  "instances": 1,
  "healthChecks": [
    {
      "protocol": "MESOS_HTTP",
      "path": "/v2/",
      "gracePeriodSeconds": 3,
      "intervalSeconds": 10,
      "portIndex": 0,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 3
    }
  ]
}
